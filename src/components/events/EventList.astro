---
import type { CollectionEntry } from "astro:content";
import EventCard from "./EventCard.astro";

interface Props {
  events: CollectionEntry<"meetups">[];
  emptyMessage?: string;
}

const { 
  events, 
  emptyMessage = "No events to show yet. Stay tuned!" 
} = Astro.props;
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  {events.map((meetup) => <EventCard meetup={meetup} />)}
</div>

{events.length === 0 && (
  <div class="bg-white border-4 border-[#333333] rounded-3xl shadow-[4px_4px_0_#333333] p-6 text-center">
    <p class="text-gray-600">{emptyMessage}</p>
  </div>
)}